{
    "name": "php-bookkeeper/accounting-active-record",
    "description": "Accounting through ActiveRecord",
    "type": "library",
    "require": {
        "php": "^7.4|^8.0",

        "moneyphp/money": "^3.3",
        "php-bookkeeper/accounting": "dev-master",
        "yiisoft/active-record": "3.0.x-dev",
        "yiisoft/db": "3.0.x-dev",
        "yiisoft/yii-console": "3.0.x-dev",
        "yiisoft/yii-db-migration": "1.0.x-dev"
    },
    "require-dev": {
        "infection/infection": "^0.21.0",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "Bookkeeper\\Accounting\\ActiveRecord\\": "src",
            "Bookkeeper\\Accounting\\ActiveRecord\\Test\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
